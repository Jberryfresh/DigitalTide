# DigitalTide - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
API_VERSION=v1
APP_NAME=DigitalTide
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
ADMIN_URL=http://localhost:3002

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://digitaltide:digitaltide_password@localhost:5432/digitaltide
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=digitaltide
POSTGRES_USER=digitaltide
POSTGRES_PASSWORD=digitaltide_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# =============================================================================
# ELASTICSEARCH CONFIGURATION
# =============================================================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# =============================================================================
# VECTOR DATABASE (PINECONE/QDRANT)
# =============================================================================
VECTOR_DB_TYPE=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=

# =============================================================================
# AI SERVICES
# =============================================================================
# AI Provider Preference: gemini (free), anthropic (paid), openai (paid)
AI_PROVIDER=gemini

# Google Gemini (FREE - 15 requests/minute)
# Get your key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_REQUESTS_PER_MINUTE=15

# Anthropic Claude (PAID - Best for creative writing)
# Get your key: https://console.anthropic.com/settings/keys
# Recommended: claude-3-5-sonnet-20241022 (60% cheaper than opus)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI (PAID - Alternative)
# Get your key: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# =============================================================================
# NEWS DATA SOURCES
# =============================================================================
GOOGLE_NEWS_API_KEY=your-google-news-api-key
NEWSAPI_KEY=your-newsapi-key
MEDIASTACK_API_KEY=your-mediastack-api-key
SERPAPI_KEY=your-serpapi-key

# =============================================================================
# MCP SERVER CONFIGURATION (Phase 2.8)
# =============================================================================
# GitHub MCP Server
GITHUB_TOKEN=your-github-personal-access-token

# Brave Search MCP Server
BRAVE_API_KEY=your-brave-search-api-key

# MCP servers are configured in .vscode/mcp-settings.json
# See docs/MCP_SETUP.md for detailed configuration instructions

# =============================================================================
# IMAGE GENERATION
# =============================================================================
DALLE_API_KEY=your-dalle-api-key
STABILITY_API_KEY=your-stability-ai-api-key

# =============================================================================
# EMAIL SERVICE
# =============================================================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@digitaltide.com
SENDGRID_FROM_NAME=DigitalTide

# =============================================================================
# CDN & STORAGE
# =============================================================================
CLOUDFLARE_API_KEY=your-cloudflare-api-key
CLOUDFLARE_ZONE_ID=your-zone-id
AWS_S3_BUCKET=digitaltide-assets
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# =============================================================================
# ANALYTICS
# =============================================================================
GOOGLE_ANALYTICS_ID=your-ga-tracking-id
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=debug
DATADOG_API_KEY=your-datadog-api-key

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_ADMIN_MAX=10000

# =============================================================================
# SECURITY
# =============================================================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
ADMIN_MFA_REQUIRED=true
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
AGENT_COO_ENABLED=true
AGENT_CRAWLER_ENABLED=true
AGENT_RESEARCH_ENABLED=true
AGENT_WRITER_ENABLED=true
AGENT_QUALITY_CONTROL_ENABLED=true
AGENT_SEO_ENABLED=true
AGENT_PUBLISHER_ENABLED=true
AGENT_ANALYTICS_ENABLED=true

# Agent Task Queue Configuration
AGENT_MAX_CONCURRENT_TASKS=5
AGENT_TASK_TIMEOUT=300000
AGENT_RETRY_ATTEMPTS=3

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_WEBSOCKETS=true
ENABLE_GRAPHQL=false
ENABLE_NEWSLETTER=true
ENABLE_COMMENTS=false
ENABLE_USER_REGISTRATION=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
ENABLE_API_DOCS=true
ENABLE_DEBUG_LOGGING=true
ENABLE_SEED_DATA=true