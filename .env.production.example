# DigitalTide - Production Environment Variables for Google Cloud Run
# Copy this file to .env.production and fill in your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=production
PORT=8080
APP_NAME=DigitalTide
API_VERSION=v1

# Application URLs (update after Cloud Run deployment)
APP_URL=https://your-service-url.run.app
FRONTEND_URL=https://your-frontend-url.com
ADMIN_URL=https://admin.your-domain.com

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Option 1: Keep using Docker PostgreSQL (for development)
# DB_HOST=host.docker.internal
# DB_PORT=5432
# DB_NAME=digitaltide
# DB_USER=postgres
# DB_PASSWORD=postgres

# Option 2: Use Cloud SQL (for production)
# DB_HOST=/cloudsql/YOUR_PROJECT_ID:us-central1:digitaltide-db
# DB_PORT=5432
# DB_NAME=digitaltide
# DB_USER=postgres
# DB_PASSWORD=your-cloud-sql-password
# DB_SSL=true

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Option 1: Keep using Docker Redis (for development)
# REDIS_HOST=host.docker.internal
# REDIS_PORT=6379

# Option 2: Use Cloud Memorystore (for production)
# REDIS_HOST=your-redis-ip
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
# REDIS_TLS=false

# ============================================================================
# JWT SECRETS (use Secret Manager in production!)
# ============================================================================
JWT_SECRET=your-jwt-secret-from-local-env
JWT_REFRESH_SECRET=your-refresh-secret-from-local-env
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ============================================================================
# NEWS API KEYS (use Secret Manager in production!)
# ============================================================================
SERPAPI_KEY=your-serpapi-key
MEDIASTACK_API_KEY=your-mediastack-key
# NEWSAPI_KEY=your-newsapi-key

# ============================================================================
# AI SERVICE KEYS (use Secret Manager in production!)
# ============================================================================
ANTHROPIC_API_KEY=your-anthropic-key
# OPENAI_API_KEY=your-openai-key

# ============================================================================
# GOOGLE CLOUD SPECIFIC
# ============================================================================
GCP_PROJECT_ID=your-project-id
GCS_BUCKET_NAME=digitaltide-storage

# ============================================================================
# SECURITY
# ============================================================================
CORS_ORIGIN=https://your-frontend-url.com,https://your-service-url.run.app
SESSION_SECRET=your-session-secret
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# AGENTS CONFIGURATION
# ============================================================================
ENABLE_COO_AGENT=false
ENABLE_CRAWLER_AGENT=false
ENABLE_RESEARCH_AGENT=false
ENABLE_WRITER_AGENT=false
ENABLE_QC_AGENT=false
ENABLE_SEO_AGENT=false
ENABLE_PUBLISHER_AGENT=false
ENABLE_ANALYTICS_AGENT=false

# Agent task queue
AGENT_MAX_CONCURRENT_TASKS=5
AGENT_TASK_TIMEOUT=300000
AGENT_RETRY_ATTEMPTS=3

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=info
ENABLE_METRICS=true

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit this file with real secrets!
# 2. Use Google Cloud Secret Manager for sensitive values
# 3. Configure these in Cloud Run through the console or gcloud command
# 4. Keep local .env for development, use .env.production for Cloud Run
