{
  "name": "digitaltide",
  "version": "1.0.0",
  "description": "AI-powered autonomous news platform with intelligent agent orchestration",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "build": "echo 'Build script placeholder'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:news-apis": "node scripts/test-news-apis.js",
    "test:ai-services": "node scripts/test-ai-services.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json,md}\"",
    "verify": "node scripts/verify-database.js",
    "db:migrate": "node database/migrate.js migrate",
    "db:migrate:status": "node database/migrate.js status",
    "db:rollback": "node database/migrate.js rollback",
    "db:seed": "node database/seed.js",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres && sleep 5 && npm run db:setup",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "keywords": [
    "ai",
    "news",
    "automation",
    "agents",
    "cms"
  ],
  "author": "DigitalTide Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@elastic/elasticsearch": "^8.10.0",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "openai": "^6.7.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.10",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.6",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
